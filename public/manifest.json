{
  "manifest_version": 3,
  "name": "Inputils - Input Utilities Extension",
  "short_name": "Inputils",
  "version": "0.2.0",
  "description": "便利な入力ユーティリティを提供する Chrome 拡張機能",
  "icons": {
    "48": "icons/icon.png"
  },
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "all_frames": true,
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["*.html", "*.css", "*.js", "*.woff2", "*.woff"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}
